<h1>Genres</h1>

@if (Model.Count == 0)
{
  <div class="alert alert-primary" role="alert">
    There are no genres in the system.
  </div>
}

<table class="table table-striped">
  @foreach (Genre genre in Model)
  {
    <tr>
      <td>@genre.Name</td>
      <td><a asp-action="Details" asp-route-id="@genre.GenreId">View Details</a></td>
    </tr>
  }
</table>

<a class="btn btn-light" asp-action="Create">Add Genre</a>
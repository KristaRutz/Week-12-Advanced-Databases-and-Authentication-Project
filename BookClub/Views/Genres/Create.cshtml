@model BookClub.Models.Genre

<h1>Add New Genre</h1>

@using (Html.BeginForm())
{
  <div class="form-group">
    @Html.LabelFor(m => m.Name)
    <input class="form-control" type="text" asp-for="Name">
  </div>
  <div class="form-group">
    <input class="btn btn-default" type="submit" value="Add Genre">
    <small class="form-text text-muted"><a asp-action="Index">Cancel</a></small>
  </div>
}
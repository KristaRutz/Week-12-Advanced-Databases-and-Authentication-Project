@using BookClub.ViewModels
@model RegisterViewModel

<h1>Sign Up</h1>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
  <div class="form-group">
    @Html.LabelFor(user => user.Email)
    @Html.TextBoxFor(user => user.Email, new { @class = "form-control"})
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.Password, new { @class = "form-control"})
    <input asp-for="Password">
    @* @Html.TextBoxFor(user => user.Email) *@
  </div>
  <div class="form-group">
    @Html.LabelFor(user => user.ConfirmPassword)
    @Html.PasswordFor(user => user.ConfirmPassword, new { @class = "form-control"})
  </div>
  <input class="btn btn-default" type="submit" value="Register">
  <small class="form-text text-muted">Already have an account? <a asp-action="Login">Sign in.</a></small>
}

